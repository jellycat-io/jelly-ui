{
  "name": "jelly-ui",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/jellycat-io/jelly-ui.git"
  },
  "bugs": {
    "url": "https://gitlab.com/jellycat-io/jelly-ui/issues"
  },
  "homepage": "https://gitlab.com/jellycat-io/jelly-ui#readme",
  "license": "MIT",
  "author": "Maxime Blanc <max@jellycat.fr>",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.36",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "eslint": "^8.16.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.5",
    "typescript": "^4.7.2",
    "web-vitals": "^2.1.4"
  },
  "peerDependencies": {
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "watch": "tsc -w --preserveWatchOutput",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "lint:eslint": "eslint ./src --ext .js,.ts,.tsx --max-warnings=0",
    "lint:ts": "tsc",
    "lint:prettier": "prettier --debug-check '*/**/*.{js,ts,tsx}'",
    "format": "prettier --write '*/**/*.{js,ts,tsx}'",
    "chromatic": "npx chromatic --project-token 19178b99c775",
    "clean": "rm -rf node_modules",
    "clean:hard": "yarn clean && rm yarn.lock",
    "reset": "yarn clean && yarn",
    "reset:hard": "yarn clean:hard && yarn"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.5",
    "@storybook/addon-essentials": "^6.5.5",
    "@storybook/addon-interactions": "^6.5.5",
    "@storybook/addon-links": "^6.5.5",
    "@storybook/builder-webpack5": "^6.5.5",
    "@storybook/manager-webpack5": "^6.5.5",
    "@storybook/node-logger": "^6.5.5",
    "@storybook/preset-create-react-app": "^4.1.1",
    "@storybook/react": "^6.5.5",
    "@storybook/testing-library": "^0.0.11",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "babel-plugin-named-exports-order": "^0.0.2",
    "chromatic": "^6.5.4",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "prop-types": "^15.8.1",
    "webpack": "^5.72.1"
  }
}
